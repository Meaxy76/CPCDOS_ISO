// USER
CCP/ /SET.LEVEL = 3

// ---- EXPLORER ----

SET/ CPC_GUI.EXPLORER.BACKGROUND = %OS_GUI%/EXP_BCK.png

SET/ CPC_GUI.EXPLORER.SCROLLBAR = %OS_GUI%/SCROLL.PNG

SET/ CPC_GUI.EXPLORER.SCROLLBAR_SIZE_X = 22
