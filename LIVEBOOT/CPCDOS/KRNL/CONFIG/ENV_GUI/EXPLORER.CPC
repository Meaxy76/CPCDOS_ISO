SET/ CPC_GUI.EXPLORER.SURVOLE_SIZE_Y = 22
SET/ CPC_GUI.EXPLORER.SURVOLE_OPACITY = 32


// --- Specific Icon mode ---

// Number letters file/dir name max
set/ CPC_GUI.EXPLORER.ICON_MODE.NAME_SIZE_MAX = 12

// Spacing between icons
set/ CPC_GUI.EXPLORER.ICON_MODE.SPACING = 40





